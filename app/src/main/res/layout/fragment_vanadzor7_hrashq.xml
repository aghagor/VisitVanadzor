<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.goro.visitvanadzor.fragments.Vanadzor7WondersFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cover_img"
                    android:layout_width="386dp"
                    android:layout_height="300dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/cover_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/samvel_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/cover_text_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/ekegheci_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/ekegheci_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/geghagitakan_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/geghagitakan_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/dproc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/dproc_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/palanduzanc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/palanduzanc_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/osepi_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/osepi_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/tayirov_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/tayirov_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/rusakan_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/rusakan_img"
                android:layout_width="386dp"
                android:layout_height="300dp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
